<%- include('./layouts/header') %>
<head>
  <style>
    main {
      margin-top : -24px;
    }
    input[type=radio]
    {
      display: inline-block;
      height: 38px;
      margin: 0 5%;
    }
    .gender
    {
      display: flex;
      width: 100%;
      background-color: #F3F4F6;
      border-radius: 8px;
      padding : 4px;
    }
    p
    {
      margin-left: 2%;
    }
  </style>
</head>

<h2>Register</h2>
<form action="/auth/register" method="post" class="lg-form">
  <div>
    <label for="username">Your Full Name</label>
    <input type="text" name="username" id="username" />
  </div>
  <div>
    <label for="email">Your Email Id</label>
    <input
      type="text"
      name="email"
      id="email"
      value="<%= locals.email ? email : '' %>"
    />
  </div>
  <label >Choose your gender</label>
  <div class="gender">
    <p><label for="boy">Male</label> </p>
    <input type="radio" name="gender" value="boy" id="boy">
    <p><label for="">Female</label></p>
    <input type="radio" name="gender" value="girl" id="girl">
  </div>
  <div>
    <label for="password">Password</label>
    <input type="password" name="password" id="password" />
  </div>
  <div>
    <label for="password2">Confirm password</label>
    <input type="password" name="password2" id="password2" />
  </div>
  <div>
    <input type="submit" value="Register" />
  </div>
</form>
<div>
    Already have an account? <span><a href="/auth/login">Login</a></span>
</div>
<br />
<%- include('./layouts/footer') %>